<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<!-- 
  Exam List Screen - Phase 8.2 (Redesigned)
  Màn hình hiển thị danh sách đề thi available cho student với giao diện compact
  @author: K24DTCN210-NVMANH (23/11/2025 12:04)
  EditBy: K24DTCN210-NVMANH (25/11/2025 11:02) - Added loading overlay
  EditBy: K24DTCN210-NVMANH (01/12/2025 00:30) - Added top bar with user info and logout
  EditBy: K24DTCN210-NVMANH (02/12/2025 16:51) - Redesigned with compact layout and IKonli icons
-->

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.mstrust.client.exam.controller.ExamListController"
           stylesheets="@../css/exam-common.css"
           prefWidth="1000" prefHeight="700">
    
    <!-- Main Content -->
    <BorderPane>
        
        <!-- Top Section: Top Bar + Header -->
        <top>
            <VBox>
                <!-- Top Bar - User Info & Logout -->
                <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="10">
                    <padding>
                        <Insets top="10" right="15" bottom="10" left="15"/>
                    </padding>
                    
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontIcon iconLiteral="fas-graduation-cap" iconSize="20" iconColor="#2196F3"/>
                        <Label text="MS.TrustTest - Student Dashboard" styleClass="app-title"/>
                    </HBox>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontIcon iconLiteral="fas-user-circle" iconSize="16" iconColor="#757575"/>
                        <Label fx:id="userLabel" text="Student Name" styleClass="user-label"/>
                        <Label fx:id="roleLabel" text="[STUDENT]" styleClass="role-badge"/>
                    </HBox>
                    
                    <Button fx:id="logoutButton" styleClass="logout-button" onAction="#handleLogout">
                        <graphic>
                            <HBox alignment="CENTER" spacing="5">
                                <FontIcon iconLiteral="fas-sign-out-alt" iconSize="14" iconColor="white"/>
                                <Label text="Đăng xuất" style="-fx-text-fill: white;"/>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
                
                <!-- Header Section -->
                <VBox styleClass="header-section">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <!-- Title -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fas-list-alt" iconSize="28" iconColor="#2196F3"/>
                    <Label text="Danh Sách Đề Thi" styleClass="page-title"/>
                </HBox>
                
                <!-- Filters Row -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                    
                    <!-- Subject Filter -->
                    <VBox spacing="5">
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <FontIcon iconLiteral="fas-book" iconSize="12" iconColor="#757575"/>
                            <Label text="Môn học:" styleClass="filter-label"/>
                        </HBox>
                        <ComboBox fx:id="subjectFilterCombo" 
                                  promptText="Tất cả môn học"
                                  prefWidth="180"/>
                    </VBox>
                    
                    <!-- Status Filter -->
                    <VBox spacing="5">
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <FontIcon iconLiteral="fas-clock" iconSize="12" iconColor="#757575"/>
                            <Label text="Trạng thái:" styleClass="filter-label"/>
                        </HBox>
                        <ComboBox fx:id="statusFilterCombo" 
                                  promptText="Tất cả trạng thái"
                                  prefWidth="180"/>
                    </VBox>
                    
                    <!-- Spacer -->
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <!-- Refresh Button -->
                    <Button fx:id="refreshButton" onAction="#onRefresh" styleClass="secondary-button">
                        <graphic>
                            <HBox alignment="CENTER" spacing="5">
                                <FontIcon iconLiteral="fas-sync-alt" iconSize="14" iconColor="#2196F3"/>
                                <Label text="Làm mới" style="-fx-text-fill: #2196F3;"/>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
                </VBox>
            </VBox>
        </top>
        
        <!-- Main Content - Exam List -->
        <center>
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="exam-scroll-pane">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                
                <!-- Exam Cards Container - True Grid Layout -->
                <VBox fx:id="examCardsContainerWrapper" spacing="0">
                    <GridPane fx:id="examCardsContainer" 
                              hgap="20" vgap="20" 
                              alignment="CENTER"
                              style="-fx-padding: 20;">
                        <!-- Exam cards sẽ được add dynamically từ controller -->
                    </GridPane>
                    
                    <!-- Empty State (hiển thị khi không có đề thi) -->
                    <VBox fx:id="emptyStateBox" 
                          alignment="CENTER" 
                          spacing="20"
                          visible="false"
                          managed="false"
                          prefWidth="800"
                          prefHeight="400">
                        <FontIcon iconLiteral="fas-inbox" iconSize="72" iconColor="#BDBDBD"/>
                        <Label text="Không có đề thi nào" 
                               styleClass="empty-state-text"/>
                        <Label text="Hiện tại không có đề thi available cho bạn" 
                               styleClass="empty-state-subtext"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </center>
        
        <!-- Footer - Info -->
        <bottom>
            <HBox styleClass="footer-section" alignment="CENTER" spacing="15">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <FontIcon iconLiteral="fas-search" iconSize="12" iconColor="#757575"/>
                    <Label fx:id="examCountLabel" text="Tìm thấy 0 đề thi" styleClass="footer-info"/>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Author Info -->
                <Label text="PTIT - K24DTCN210 - Nguyễn Văn Mạnh - 0933.365.999" styleClass="footer-info" style="-fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS"/>
                
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <FontIcon iconLiteral="fas-clock" iconSize="12" iconColor="#757575"/>
                    <Label fx:id="lastRefreshLabel" text="Cập nhật lần cuối: --:--" styleClass="footer-info"/>
                </HBox>
            </HBox>
        </bottom>
        
    </BorderPane>
    
    <!-- Loading Overlay (Phase 8.6: Added) -->
    <StackPane fx:id="loadingOverlay" 
               visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.7);">
        <VBox alignment="CENTER" spacing="20">
            <ProgressIndicator prefWidth="80" prefHeight="80"/>
            <Label fx:id="loadingMessage" 
                   text="Đang tải dữ liệu..."
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </StackPane>
    
</StackPane>
