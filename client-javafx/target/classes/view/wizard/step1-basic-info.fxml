<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mstrust.client.teacher.controller.wizard.Step1BasicInfoController"
      styleClass="wizard-step"
      stylesheets="@../../css/teacher-styles.css"
      spacing="20"
      alignment="TOP_CENTER">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>
    
    <!-- Header -->
    <Label text="Bước 1: Thông tin cơ bản" styleClass="wizard-step-title"/>
    <Separator/>
    
    <!-- Form -->
    <GridPane hgap="20" vgap="18" maxWidth="900">
        
        <!-- Tiêu đề -->
        <Label text="Tiêu đề đề thi *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="titleField" promptText="Nhập tiêu đề đề thi (3-200 ký tự)" 
                   GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" minWidth="400"/>
        
        <!-- Mô tả -->
        <Label text="Mô tả" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" 
               GridPane.valignment="TOP">
            <padding><Insets top="5"/></padding>
        </Label>
        <TextArea fx:id="descriptionArea" promptText="Nhập mô tả chi tiết về đề thi" 
                  wrapText="true" prefRowCount="3" GridPane.hgrow="ALWAYS" minWidth="400"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <!-- Môn học -->
        <Label text="Môn học *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="subjectClassCombo" promptText="Chọn môn học" GridPane.hgrow="ALWAYS" minWidth="400"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <!-- Mục đích -->
        <Label text="Mục đích *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="examPurposeCombo" promptText="Chọn mục đích" GridPane.hgrow="ALWAYS" minWidth="400"
                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <!-- Định dạng -->
        <Label text="Định dạng *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="examFormatCombo" promptText="Chọn định dạng" GridPane.hgrow="ALWAYS" minWidth="400"
                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <!-- Thời gian bắt đầu -->
        <Label text="Thời gian bắt đầu *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <DatePicker fx:id="startDatePicker" promptText="Chọn ngày" prefWidth="150"/>
            <Label text="Giờ:"/>
            <Spinner fx:id="startHourSpinner" prefWidth="70" editable="true"/>
            <Label text="Phút:"/>
            <Spinner fx:id="startMinuteSpinner" prefWidth="70" editable="true"/>
        </HBox>
        
        <!-- Thời gian kết thúc -->
        <Label text="Thời gian kết thúc *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <DatePicker fx:id="endDatePicker" promptText="Chọn ngày" prefWidth="150"/>
            <Label text="Giờ:"/>
            <Spinner fx:id="endHourSpinner" prefWidth="70" editable="true"/>
            <Label text="Phút:"/>
            <Spinner fx:id="endMinuteSpinner" prefWidth="70" editable="true"/>
        </HBox>
    </GridPane>
    
    <!-- Error Label -->
    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" maxWidth="600" visible="false"/>
    
    <!-- Spacer -->
    <Region VBox.vgrow="ALWAYS"/>
    
    <!-- Note -->
    <Label text="* Các trường bắt buộc" styleClass="form-note"/>
    
</VBox>
